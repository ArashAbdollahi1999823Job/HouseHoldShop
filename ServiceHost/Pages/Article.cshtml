    <div class="comment-section">
        <h3 class="comment-counter">کامنت @Model.Article.Comments.Count</h3>
        <div class="comment-container">

            @foreach (var comment in Model.Article.Comments)
            {
                <div class="single-comment" id="comment-@comment.Id">
                    <span class="reply-btn">
                        <a href="#postComment" onclick='$("#commentParentId").val(@comment.Id)' >پاسخ</a>
                    </span>
                        
                    <div class="image">
                        <img src="~/Theme/assets/img/blog/comment-icon.png" alt="">
                    </div>
                    <div class="content">
                        <h3 class="user">@comment.Name <span class="comment-time">@comment.CreationDate</span></h3>
                        @if (comment.ParentId > 0)
                        {
                            <p>
                                <span>در پاسخ به: </span><a href="#comment-@comment.ParentId">@comment.ParentName</a>
                            </p>
                        }
                        <p class="comment-text">@comment.Message</p>
                    </div>
                </div>
            }

            <!--=======  comment container  =======-->

            <!--=======  single comment  =======-->

                  
            <!--=======  End of comment container  =======-->
            <!--=======  comment form container  =======-->
            <div class="comment-form-container">
                <h3 class="comment-form-title">نظر خود را به اشتراک بگزارید</h3>
                <p>ایمیل شما برای دیگران قابل دیدن نیست</p>

                <!--=======  comment form  =======-->

                <div class="comment-form" id="postComment">
                    <form action="" method="post">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>کامنت</label>
                                    <textarea name="Message"  placeholder="نظر خود زا بنویسید"
                                                                        id="commentMessage"></textarea>
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>نام <span class="required">*</span></label>
                                    <input type="text" name="Name">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>ایمیل <span class="required">*</span></label>
                                    <input type="text" name="Email">
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label>سایت</label> 
                                    <input type="text" name="Website">
                                </div>
                            </div>
                            <input type="hidden" name="ownerRecordId" value="@Model.Article.Id" />
                            <input type="hidden" name="parentId" id="commentParentId"  value="1"/>
                            <input type="hidden" name="articleSlug" value="@Model.Article.Slug" />
                            <div class="col-lg-12">
                                <button type="submit" class="comment-btn"
                                        name="submit">ارسال </button>
                            </div>
                        </div>
                    </form>
                </div>
                
                <div class="social-share-buttons">
                    <h3>share this post</h3>
                    <ul>
