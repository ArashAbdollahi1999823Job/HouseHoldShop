    <div class="page-content-wrapper">
        <div class="row">

            <div class="col-lg-9 order-1 order-lg-1">
                <!--=======  blog page content  =======-->
                <div class="blog-page-content">
                    <!--=======  blog post container  =======-->

                    <div class="blog-single-post-container">

                        <!--=======  post title  =======-->


                        <h3 class="post-title">@Model.Article.Title</h3>

                        <!--=======  End of post title  =======-->
                        <!--=======  Post meta  =======-->
                        <div class="post-meta">
                            <p>
                                <span>
                                    <i class="fa fa-calendar"></i> نوشته شده در: 
                                    @Model.Article.PublishDate
                                </span>
                            </p>
                        </div>

                        <!--=======  End of Post meta  =======-->
                        <!--=======  Post media  =======-->

                        <div class="single-blog-post-media">
                            <div class="image">
                                <img src="~/ProductPictures/@Model.Article.Picture"
                                     class="img-fluid" alt="@Model.Article.PictureAlt" title="@Model.Article.PictureTitle">
                            </div>
                        </div>

                        <!--=======  End of Post media  =======-->
                        <!--=======  Post content  =======-->

                        <div class="post-content">
                            @Html.Raw(Model.Article.Description)
                        </div>

                        <!--=======  End of Post content  =======-->
                        <!--=======  Tags area  =======-->

                        <div class="tag-area">
                            <span>تگ ها </span>
                            <ul>
                                @foreach(var tag in @Model.Article.KeyWordList)
                                {
                                    <li>
                                        <a asp-page="./Search" asp-route-value="@tag">@tag</a>
                                    </li>
                                }
                            </ul>
                        </div>

                        <!--=======  End of Tags area  =======-->
                        <!--=======  Share post area  =======-->

                    </div>

                    <!--=======  End of blog post container  =======-->
                    <!--=============================================
                    =            Comment section         =
                    =============================================-->


                    <!--=====  End of Comment section  ======-->
                </div>
                <!--=======  End of blog page content  =======-->
            </div>
            <div class="col-lg-3 order-2 order-lg-2">
                <!--=======  page sidebar wrapper =======-->
                <div class="page-sidebar-wrapper">
                    <!--=======  single sidebar widget  =======-->
                    <div class="single-sidebar-widget">

                        <h4 class="single-sidebar-widget__title">گروه مقالات</h4>
                        <ul class="single-sidebar-widget__category-list">
                            @foreach (var ArticleCategory in Model.ArticleCategories)
                            {
                                <li>
                                    <a asp-page="./ArticleCategory" asp-route-slug="@ArticleCategory.Slug">@ArticleCategory.Name <span class="counter">@ArticleCategory.ArticlesCount</span></a>
                                </li>
                            }
                        </ul>
                    </div>

                    <div class="single-sidebar-widget">

                        <h4 class="single-sidebar-widget__title">اخرین مفالات</h4>
                        <div class="block-container">
                            @foreach (var Article in Model.LatestArticles)
                            {
                                <div class="single-block d-flex">
                                    <div class="image">
                                        <a href="blog-post-image-format.html">
                                            <img src="~/ProductPictures/@Article.Picture" title="@Article.PictureTitle"
                                                 class="img-fluid" alt="@Article.PictureAlt">
                                        </a>
                                    </div>
                                    <div class="content">
                                        <p>
                                            <a asp-page="./Article" asp-route-slug="@Article.Slug">
                                                @Article.Title
                                            </a> <span>@Article.PublishDate</span>
                                        </p>
                                    </div>
                                </div>
                            }
                        </div>

                        <!--=======  End of block container  =======-->
                    </div>
                    <!--=======  End of single sidebar widget  =======-->
                    <!--=======  single sidebar widget  =======-->
                    <div class="single-sidebar-widget">

                        <h4 class="single-sidebar-widget__title">Recent Comments</h4>

                        <!--=======  block container  =======-->

